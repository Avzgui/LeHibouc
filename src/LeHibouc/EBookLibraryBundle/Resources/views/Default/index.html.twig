{# src/LeHibouc/EBookLibraryBundle/Resources/views/Advert/index.html.twig #}

{% extends "AppBundle::layout.html.twig" %}

{% block body %}

<h2>Books</h2>

<ul>
	{% for book in list %}
	<li>
		<a href="{{ path('library_book', {'slug': book.slug}) }}">{{ book.title }}</a>
		, by {{ book.author }}.
	</li>
	{% endfor %}
</ul>

<ul class="pagination">
	{# On utilise la fonction range(a, b) qui cr√©e un tableau de valeurs entre a et b #}
	{% for p in range(1, nbPages) %}
	<li{% if p == page %} class="active"{% endif %}>
		<a href="{{ path('library_homepage', {'page': p}) }}">{{ p }}</a>
	</li>
	{% endfor %}
</ul>

{% endblock %}