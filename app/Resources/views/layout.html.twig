{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>{% block title %}Le Hibouc{% endblock %}</title>

  {% block stylesheets %}
    {# On charge le CSS de bootstrap depuis le site directement #}
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
  {% endblock %}
</head>

  <body>
    <div class="container">
      <div id="header" class="jumbotron">
        <h1>Le Hibouc</h1>
        <p>
          The Online Community Library
        </p>
      </div>

      <div class="row">
        <div id="menu" class="col-md-3">
            {{ render(controller("AppBundle:Default:menu")) }}

            <h4>Latest books uploaded</h4>

            {{ render(controller("EBookLibraryBundle:Default:latest", {'limit': 3})) }}
        </div>
        <div id="content" class="col-md-9">
          {% block body %}
          {% endblock %}
        </div>
      </div>
      <hr>
      <footer>
        <p>Le Hibouc <img src="copyleft.svg" alt="copyleft" style="width:12px;height:12px;"> {{ 'now'|date('Y') }} and beyond.</p>
      </footer>
    </div>

    {% block javascripts %}
      {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalit√©s du bootstrap Twitter #}
      <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
      <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    {% endblock %}

  </body>
</html>